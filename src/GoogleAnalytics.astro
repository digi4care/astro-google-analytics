---
// component: src/components/common/GoogleAnalytics.astro
export interface Props {
  id: string;
  partytown?: boolean;
  domain?: string;
}

const { id = 'GA4_MEASUREMENT_ID', partytown = false, domain = 'https://www.googletagmanager.com' } = Astro.props;

const attrs = partytown ? { type: 'text/partytown' } : {};
---
<!-- Global site tag (gtag.js) - Google Analytics -->
{ id && (
  <script is:inline async src={`${domain}/gtag/js?id=${id}`} {...attrs}></script>
)}

{ id && (
  <script is:inline define:vars={{ id }} {...attrs}>
    // Initialize dataLayer
    window.dataLayer = window.dataLayer || [];
    function gtag() {
      window.dataLayer.push(arguments);
    }

    // Initialize GA on first load (works with or without View Transitions)
    gtag('js', new Date());
    gtag('config', id);

    // Re-initialize GA on view transitions (only runs if View Transitions is enabled)
    // This event won't fire if you're not using View Transitions, so GA will work normally
    document.addEventListener('astro:after-swap', () => {
      gtag('js', new Date());
      gtag('config', id);
    });
  </script>
)}
<!-- Einde Global site tag (gtag.js) - Google Analytics -->